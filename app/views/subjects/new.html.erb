<h1>Create a New Subject</h1>

<%= form_for [@research, @subject]  do |f| %>
    <%= f.label :field_of_Study %>
    <%= f.text_field :field_of_Study %>
    <br>
    <%= f.hidden_field :research_id, value: @research.id %>
    <%= f.hidden_field :user_id, value: @user.id %>
    <%= f.submit %>
<% end %>